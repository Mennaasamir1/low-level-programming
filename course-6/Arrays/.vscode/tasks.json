{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "0-main.cpp",
                "1-main.cpp",
                "2-main.cpp",
                "${file}",
                "-o",
                "${workspaceFolder}/1-main",
                "${workspaceFolder}/0-main",
                "${workspaceFolder}/2-main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}